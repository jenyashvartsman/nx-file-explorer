{
  "compilerOptions": {
    "baseUrl": ".",
    "importHelpers": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "paths": {
      "@libs/*": ["libs/*"],
      "@libs/dto": ["libs/dto/src/index.ts"]
    }
  }
}
